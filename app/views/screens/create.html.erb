<section class="fdb-block">
  <div class="container">
    <div class="row">
      <h2 class="text-secondary"><%= t 'step3' %></h2>
    </div>
    <div class="row">
      <h1><%= t 'screens.result' %></h1>
    </div>
    <% @results.each do |result| %>
      <% if result.status === true %>
        <div class="row alert alert-success" role="alert">
          <%= t 'screens.success' %> <%= result.hostname %><% if result.excess_vsize? %>. Rows' quantity of this screen was limited to 100 (Zabbix restriction)<% end %>
        </div>
      <% else %>
        <div class="row alert alert-danger" role="alert">
          <%= t('screens.fail_part1') + ' ' + result.hostname + ' ' + t('screens.fail_part2') %>
        </div>
      <% end %>
    <% end %>
    <div class="row">
      <%= link_to t('screens.select_another_hosts'), screens_new_path, {class: 'btn', role: 'button'} %>
    </div>
  </div>
</section>